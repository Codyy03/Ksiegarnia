<Window x:Class="Ksiegarnia.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookDetailsWindow" Height="950" Width="1230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="373*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="#FF383838" VerticalAlignment="Top" Height="66" >
            <StackPanel Width="182" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,5,0,0">
                <!-- Przyciski koszyka z użyciem CartButtonStyle -->
                <Button Style="{StaticResource CartButtonStyle}" Content="0" Height="61" Width="61" />
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,70,0,50" Orientation="Horizontal" HorizontalAlignment="Center" Cursor="Hand" Grid.RowSpan="2" Width="1226">

            <!-- Okładka książki -->
            <Image x:Name="BookCover" Style="{StaticResource BookCoverStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="Hand" Margin="50,0,50,0" />

            <!-- Szczegóły książki -->
            <StackPanel Height="286" Width="676" VerticalAlignment="Top">
                <TextBlock x:Name="book_title" Text="Gra o tron" Style="{StaticResource BookTitleStyleInBookInfo}" HorizontalAlignment="Left" />
                <TextBlock x:Name="book_author" Text="George R.R. Martin" Style="{StaticResource BookAuthorStyle}" HorizontalAlignment="Left" />
                <TextBlock x:Name="book_price" Text="60 zł" Style="{StaticResource BookPriceStyle}" HorizontalAlignment="Left" />
                <Button Content="Dodaj do koszyka" Style="{StaticResource AddToCartButtonStyle}" HorizontalAlignment="Left" />
            </StackPanel>
            <TextBlock x:Name="book_tag" Text="Fantasy" Style="{StaticResource BookTagStyle}"  HorizontalAlignment="Left" />
            <TextBlock x:Name="book_language" Text="Język: Polski" Style="{StaticResource BookTagStyle}"  HorizontalAlignment="Left" Width="671" TextAlignment="Left" />
        </StackPanel>
        <StackPanel Margin="0,590,675,0" >
            <TextBlock Text="Opis produktu" TextAlignment="Center" FontSize="25"/>
            <TextBlock x:Name="book_description" Text="Opis produktu" TextAlignment="Center" FontSize="18" Height="280"/>

        </StackPanel>



    </Grid>
</Window>
