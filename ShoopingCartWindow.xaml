<Window x:Class="Ksiegarnia.ShoopingCartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShoopingCartWindow" Height="850" Width="1100">
    <Grid Margin="10">
        <!-- Podział na 2 kolumny -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400" />
            <ColumnDefinition Width="300" MinWidth="250" />
        </Grid.ColumnDefinitions>

        <!-- Lista produktów w koszyku (bez zewnętrznego ScrollViewer) -->
        <ListView x:Name="BooksInShoopingCart"
              Grid.Column="0"
              Style="{StaticResource CartListViewStyle}"
              Margin="10"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              VirtualizingPanel.IsVirtualizing="False">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                     IsItemsHost="True"
                     ItemWidth="150"
                     ItemHeight="Auto"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CartItemStyle}" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Title}"
                         FontSize="16"
                         FontWeight="Bold"
                         TextAlignment="Center"
                         Margin="0,0,0,5"/>
                            <Image Source="{Binding CoverPath}"
                     Width="120" Height="160"
                     Stretch="Uniform"
                     Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Author.FullName}"
                         FontStyle="Italic"
                         TextAlignment="Center"
                         Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding PriceWithZl}"
                         FontSize="16"
                         Foreground="Green"
                         TextAlignment="Center"
                         Margin="0,0,0,5"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Panel podsumowania zamówienia -->
        <Border Grid.Column="1"
            CornerRadius="10"
            Margin="10"
            Padding="20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Podsumowanie zamówienia"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
                <Separator Margin="0,0,0,10" Background="#CCCCCC" Height="1"/>
                <TextBlock x:Name="TotalPrice" Text="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Green"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
                <TextBlock x:Name="delivery" Text="Dostawa od 10 zł"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
                <Button Content="Wybierz metodę dostawy"
                Background="#FF5722"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Padding="10"
                Margin="0,0,0,10"/>
                <Button Content="Kup"
                Background="#007ACC"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Padding="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
