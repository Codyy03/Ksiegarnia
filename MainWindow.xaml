<Window x:Class="Ksiegarnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ksiegarnia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,0">
        <StackPanel Height="397" VerticalAlignment="Top">
            <TextBlock x:Name="userName" TextWrapping="Wrap" Text="Witaj, Jan!" Width="183" Height="25" FontFamily="Bahnschrift" FontSize="20" TextAlignment="Center" FontWeight="Bold" Margin="0,5,0,20"/>
            <TextBlock x:Name="PlaceholderText"
               Text="Wyszukaj książkę..."
               Foreground="Gray"
               IsHitTestVisible="False" Width="777" Margin="0,0,0,5"/>
            <TextBox x:Name="SearchBox" HorizontalAlignment="Center"  TextWrapping="Wrap"  VerticalContentAlignment="Center" Width="780" Height="39" FontFamily="Bahnschrift" FontSize="20" FontWeight="Bold" TextChanged="SearchBox_TextChanged"  />

            <ListView x:Name="BooksList" Visibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- WrapPanel układa elementy obok siebie -->
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <!-- Tytuł książki -->
                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Margin="5" TextAlignment="Center" />

                            <!-- Okładka książki -->
                            <Image Source="{Binding CoverPath}" Width="150" Height="200" Stretch="Uniform" Margin="5" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</Window>
